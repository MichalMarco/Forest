<!DOCTYPE html>
<html lang="pl">

<!-- @include 'head.kit' -->

<body>

    <!-- @include 'nav2.kit' -->

    <main>

        <section class="contact">
            <div class="wrapper">
                <div class="contact__box">
                    <h2 class="contact__title"><i class="fa-solid fa-envelope"></i> Kontakt</h2>
                    <form class="contact__form" action="mailto:someone@example.com">

                        <div class="contact__form-top">
                            <label for="name" class="contact__form-label">Imię i nazwisko</label>
                            <input type="text" class="contact__form-input" id='name'>
                            <label for="email" class="contact__form-label">Adres e-mail</label>
                            <input type="text" class="contact__form-input" id='email'>
                        </div>

                        <label for="" class="contact__form-label">Wiadomość</label>
                        <textarea id="msg" cols="30" class="contact__form-textarea"></textarea>

                        <button type="submit" class='contact__form-btn'>Wyślij</button>
                    </form>

                </div>
            </div>
        </section>
        <section>
            <div class="wrapper location">
                <div class="location__map">
                    <iframe
                        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2559.898451398873!2d19.890660217443834!3d50.0881881!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47165a326d015c3b%3A0x47a12cd367a1f34e!2sRestauracja%20McDonald&#39;s!5e0!3m2!1spl!2spl!4v1647445539979!5m2!1spl!2spl"
                        allowfullscreen="" loading="lazy"></iframe>
                </div>
                <div class="location__adress">
                    <h3>Dane teleadresowe</h3>
                    <p>FOREST GROUP COMPANY LTD</p>
                    <p>Ul. Jeleniogórska 2</p>
                    <p>31-358 Kraków</p>
                    <p><i class="fa-solid fa-phone"></i> +48 800 111 111</p>
                    <p><i class="fa-solid fa-envelope"></i> kontakt@forest.pl</p>
                </div>
            </div>
        </section>
    </main>

    <!-- @include 'footer.kit' -->



    <script src="dist/js/contact.min.js"></script>
</body>

</html>